{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: Create Build Folder",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/AutoFrameCAD/build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "C: Compile to Shared Library",
      "type": "shell",
      "command": "g++",
      "args": [
        "-shared",
        "-fPIC",
        "-g",
        "${workspaceFolder}/AutoFrameCAD/Utils.c",
        "-o",
        "${workspaceFolder}/AutoFrameCAD/build/Utils.so"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$gcc",
      "dependsOn": ["C: Create Build Folder"]
    }
  ]
}
