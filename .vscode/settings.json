{
  // C/C++ Settings
  "C_Cpp.default.compilerPath": "",
  "C_Cpp.errorSquiggles": "enabled",

  // CMake Settings
  "cmake.sourceDirectory": "C:/VSC/AutoFrameCAD/CMakeLists.txt",

  // Code Runner Settings
  "code-runner.clearPreviousOutput": true,

  // Editor Settings
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.filterGraceful": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": true,

  // Explorer Settings
  "explorer.openEditors.visible": 1,

  // Git Settings
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  // Jupyter Notebook Settings
  "jupyter.notebookFileRoot": "${workspaceFolder}/bcc",

  // Python Analysis Settings
  "python.analysis.addImport.exactMatchOnly": false,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportWildcardImportFromLibrary": "none"
  },
  "python.analysis.extraPaths": [
    "${workspaceFolder}/bbc",
    "${workspaceFolder}"
  ],
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.formatting.blackArgs": ["--fast"],

  // Todo Tree Settings
  "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
  "todo-tree.general.statusBar": "current file",
  "todo-tree.general.tags": ["BUG", "ERROR", "FIXME", "TODO", "NOTE"],
  "todo-tree.highlights.defaultHighlight": {
    "opacity": 0.5, // Make the background color semi-transparent
    "borderRadius": "0.2em", // Make the background corners slightly curved
    "gutterIcon": "True"
  },
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug",
      "iconColor": "#FFA500", // Orange icon color
      "foreground": "#FFFFFF", // White foreground color
      "background": "#FFA500" // Orange background color
    },
    "ERROR": {
      "icon": "x",
      "iconColor": "#FF0000", // Red icon color
      "foreground": "#FFFFFF", // White foreground color
      "background": "#FF0000" // Red background color
    },
    "FIXME": {
      "icon": "flame",
      "iconColor": "#0000FF", // Blue icon color
      "foreground": "#FFFFFF", // White foreground color
      "background": "#0000FF" // Blue background color
    },
    "TODO": {
      "icon": "check",
      "iconColor": "#008000", // Green icon color
      "foreground": "#FFFFFF", // White foreground color
      "background": "#008000" // Green background color
    },
    "NOTE": {
      "icon": "note",
      "iconColor": "#FFFF00", // Yellow icon color
      "foreground": "#000000", // Black foreground color
      "background": "#FFFF00" // Yellow background color
    }
  },
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.highlightDelay": 0,
  "todo-tree.highlights.useColourScheme": false,

  // Workbench Settings
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": true,
  "workbench.editor.tabSizing": "fit",
  "workbench.sideBar.location": "left",
  "workbench.colorTheme": "Monokai Dimmed"
}
